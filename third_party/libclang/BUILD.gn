import("//build/config/prebuilt_library.gni")

prebuilt_library("libclang") {
  if (is_win) {
    static_libs = [
      "lib/win64/libclang.lib",
    ]
    shared_libs = [
      "bin/win64/libclang.dll",
    ]
    include_dirs = [
      "include",
    ]
  } else if (is_linux) {
    static_libs = [
      "libclang.a",
    ]
  }
}
